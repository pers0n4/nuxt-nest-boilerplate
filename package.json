{
  "name": "nuxt-nest-boilerplate",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "concurrently \"npm:build:client\" \"npm:build:server\"",
    "build:client": "nuxt build",
    "build:server": "nest build",
    "dev:client": "nuxt",
    "dev:server": "nest start --debug --watch",
    "generate": "nuxt generate",
    "lint": "yarn lint:js && yarn lint:style && yarn lint:prettier",
    "lint-fix": "prettier --write --list-different . && yarn lint:js --fix && yarn lint:style --fix",
    "lint:js": "eslint --ext \".js,.ts,.vue\" --ignore-path .gitignore .",
    "lint:prettier": "prettier --check .",
    "lint:style": "stylelint \"**/*.{css,scss,sass,html,vue}\" --ignore-path .gitignore",
    "prepare": "husky install",
    "start": "nuxt start",
    "test": "yarn test:client && yarn test:server && yarn test:e2e",
    "test:client": "jest --config ./jest-client.config.ts",
    "test:e2e": "jest --config ./server/test/jest-e2e.json",
    "test:server": "jest --config ./jest-server.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^8.4.4",
    "@nestjs/core": "^8.4.4",
    "@nestjs/platform-express": "^8.4.4",
    "@nestjs/platform-fastify": "^8.4.4",
    "@nuxtjs/axios": "^5.13.6",
    "@nuxtjs/pwa": "^3.3.5",
    "@types/express": "^4.17.13",
    "core-js": "^3.19.3",
    "nuxt": "^2.15.8",
    "nuxt-property-decorator": "^2.9.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "vue": "^2.6.14",
    "vue-server-renderer": "^2.6.14",
    "vue-template-compiler": "^2.6.14",
    "webpack": "^4.46.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.2.3",
    "@commitlint/config-conventional": "^16.2.1",
    "@nestjs/cli": "^8.2.5",
    "@nestjs/schematics": "^8.0.10",
    "@nestjs/testing": "^8.4.4",
    "@nuxt/types": "^2.15.8",
    "@nuxt/typescript-build": "^2.1.0",
    "@nuxtjs/eslint-config-typescript": "^9.0.0",
    "@nuxtjs/eslint-module": "^3.0.2",
    "@nuxtjs/stylelint-module": "^4.1.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.18.0",
    "@typescript-eslint/parser": "^5.18.0",
    "@vue/test-utils": "^1.3.0",
    "babel-core": "7.0.0-bridge.0",
    "concurrently": "^7.1.0",
    "eslint": "^8.4.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-nuxt": "^3.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-vue": "^8.2.0",
    "husky": "^7.0.4",
    "jest": "^27.4.4",
    "lint-staged": "^12.1.2",
    "postcss-html": "^1.3.0",
    "prettier": "^2.5.1",
    "source-map-support": "^0.5.21",
    "stylelint": "^14.1.0",
    "stylelint-config-prettier": "^9.0.3",
    "stylelint-config-recommended-vue": "^1.1.0",
    "stylelint-config-standard": "^24.0.0",
    "supertest": "^6.2.2",
    "ts-jest": "^27.1.1",
    "ts-node": "^10.7.0",
    "vue-jest": "^3.0.4"
  }
}
